<Page x:Class="MyDictionary.Views.Pages.DetailWordView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyDictionary.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailWordView">

    <Grid Background ="{DynamicResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <ScrollBar Name="scbContent" Orientation="Vertical" HorizontalAlignment="Right" Grid.RowSpan="2" Width="17"/>
        <Label Name ="lbTitle" Content="Label" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center"
               Height="38" Width="403" FontSize="20"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="39"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="97*"/>
            </Grid.RowDefinitions>
            <DockPanel x:Name="dPhonetic" 
                        Grid.ColumnSpan="2" Margin="0,0,0,3" >
                <Label x:Name="lbUK" Content="us" Height="Auto" 
                       Width="Auto" FontSize="15" DockPanel.Dock="Left"/>
                <Label x:Name="lbUS" Content="uk" 
                       Height="Auto" Width="Auto" FontSize="15" DockPanel.Dock="Left"/>
                <Button x:Name="btnDownload" Content="Download" DockPanel.Dock="Right" Width="92"
                        Click="btnDownload_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
