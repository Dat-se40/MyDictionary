<Page x:Class="MyDictionary.Views.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyDictionary.Views.Pages"
      xmlns:userControls="clr-namespace:MyDictionary.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="{DynamicResource MainBackground}">
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Content Grid - Chứa Quote và Word Collection -->
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quote Card - Thẻ hiển thị câu trích dẫn -->
                    <Border Grid.Column="0"
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,15,0">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Quote Image -->
                            <Border Width="200" Height="200"
                            CornerRadius="100"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="3"
                            Margin="0,0,0,20">
                                <Border.Background>
                                    <ImageBrush x:Name="QuoteImage"
                                        ImageSource="https://picsum.photos/200/200?random=1"/>
                                </Border.Background>
                            </Border>

                            <!-- Quote Text -->
                            <TextBlock x:Name="QuoteText"
                               Text='"The limits of my language mean the limits of my world."'
                               FontSize="18"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{DynamicResource TextColor}"
                               Margin="0,0,0,15"/>

                            <!-- Quote Author -->
                            <TextBlock x:Name="QuoteAuthor"
                               Text="— Ludwig Wittgenstein"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.8"
                               TextAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Word Collection Card - Thẻ hiển thị bộ sưu tập từ -->
                    <Border Grid.Column="1"
                    Style="{StaticResource CardStyle}"
                    BorderThickness="0,0,0,4"
                    Margin="15,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Header -->
                                <RowDefinition Height="*"/>
                                <!-- Word List -->
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0"
                            Background="{DynamicResource ToolbarBackground}"
                            Padding="20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📚" FontSize="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Bộ sưu tập từ vựng của bạn"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </Border>

                            <!-- Word List -->
                            <ScrollViewer
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="15"
                                  MaxHeight="500" Margin="-1,64,1,2" Grid.RowSpan="2">
                                <StackPanel x:Name="stpWordItems" HorizontalAlignment="Stretch">
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
                <!-- ================================= -->
                <!-- FOOTER - Phần thông tin (nằm dưới cùng, scroll mới thấy) -->
                <!-- ================================= -->
                <Border Background="{DynamicResource NavbarBackground}"
 Padding="40,30"
 Margin="0,50,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Thông tin đồ án -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="📚 Thông tin đồ án"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,0,10"/>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Môn học: " FontWeight="Bold"/>
         <Run Text="Lập trình trực quan"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Giảng viên: " FontWeight="Bold"/>
         <Run Text="ThS. Mai Trọng Khang"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Học kỳ: " FontWeight="Bold"/>
         <Run Text="1 - Năm 2024-2025"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Thành viên nhóm -->
                        <StackPanel Grid.Column="1" Margin="0,0,20,0">
                            <TextBlock Text="👥 Thành viên nhóm"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,0,10"/>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap" Margin="0,0,0,5">
         <Run Text="Nguyễn Tấn Đạt" FontWeight="Bold"/>
         <LineBreak/>
         <Run Text="MSSV: 2450280"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap" Margin="0,0,0,5">
         <Run Text="Võ Nguyễn Thanh Hương" FontWeight="Bold"/>
         <LineBreak/>
         <Run Text="MSSV: 24520649"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Phan Thế Phong" FontWeight="Bold"/>
         <LineBreak/>
         <Run Text="MSSV: 24521342"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Thời gian thực hiện -->
                        <StackPanel Grid.Column="2" Margin="0,0,20,0">
                            <TextBlock Text="📅 Thời gian"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,0,10"/>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Bắt đầu: " FontWeight="Bold"/>
         <Run Text="01/01/2024"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Kết thúc: " FontWeight="Bold"/>
         <Run Text="15/02/2024"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Công nghệ: " FontWeight="Bold"/>
         <Run Text="WPF C#"/>
                            </TextBlock>
                            <TextBlock Foreground="White" Opacity="0.9" TextWrapping="Wrap">
         <Run Text="Version: " FontWeight="Bold"/>
         <Run Text="1.0.0"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Thông tin liên hệ -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="📞 Liên hệ"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,0,0,10"/>
                            <TextBlock Text="Email: dictionary@example.com"
                Foreground="White"
                Opacity="0.9"
                TextWrapping="Wrap"/>
                            <TextBlock Text="GitHub: github.com/dictionary"
                Foreground="White"
                Opacity="0.9"
                TextWrapping="Wrap"/>
                            <TextBlock Text="© 2024 Dictionary App"
                FontWeight="Bold"
                Foreground="White"
                Margin="0,10,0,0"/>
                            <TextBlock Text="All rights reserved"
                Foreground="White"
                Opacity="0.9"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
        </ScrollViewer>

    </Grid>
</Page>
