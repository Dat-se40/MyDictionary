<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================ -->
    <!-- LIGHT MODE COLORS -->
    <!-- ================================ -->
    <LinearGradientBrush x:Key="LightMainBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E8F1FF" Offset="0"/>
        <GradientStop Color="#F0E8FF" Offset="0.5"/>
        <GradientStop Color="#F5E8FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightNavbarBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A2D6D" Offset="0"/>
        <GradientStop Color="#2D4ACC" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="LightTextColor" Color="#1A2D6D"/>
    <SolidColorBrush x:Key="LightButtonColor" Color="#2D4ACC"/>
    <SolidColorBrush x:Key="LightCardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="LightBorderColor" Color="#5B7FFF"/>

    <LinearGradientBrush x:Key="LightWordItemBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E8F1FF" Offset="0"/>
        <GradientStop Color="#F5E8FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightWordItemHoverBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#D0E4FF" Offset="0"/>
        <GradientStop Color="#E8D4FF" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="LightWordItemBorder" Color="#2D4ACC"/>
    <LinearGradientBrush x:Key="LightToolbarBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#E8F1FF" Offset="0"/>
        <GradientStop Color="#F5E8FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightThemeSliderBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#5B7FFF" Offset="0"/>
        <GradientStop Color="#5B7FFF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LightThemeToggleBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FFFFFF" Offset="1"/>
    </LinearGradientBrush>



    <!-- ================================ -->
    <!-- DARK MODE COLORS -->
    <!-- ================================ -->
    <LinearGradientBrush x:Key="DarkMainBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D1B2A" Offset="0"/>
        <GradientStop Color="#1B263B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkNavbarBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1E3A5F" Offset="0"/>
        <GradientStop Color="#2C5282" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="DarkTextColor" Color="#93C5FD"/>
    <SolidColorBrush x:Key="DarkButtonColor" Color="#3B82F6"/>
    <SolidColorBrush x:Key="DarkCardBackground" Color="#1E293B"/>
    <SolidColorBrush x:Key="DarkBorderColor" Color="#3B82F6"/>

    <LinearGradientBrush x:Key="DarkWordItemBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#2D3748" Offset="0"/>
        <GradientStop Color="#334155" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkWordItemHoverBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#374151" Offset="0"/>
        <GradientStop Color="#3F4A5C" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="DarkWordItemBorder" Color="#60A5FA"/>
    <LinearGradientBrush x:Key="DarkToolbarBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1E293B" Offset="0"/>
        <GradientStop Color="#334155" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkSidebarBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1E293B" Offset="0"/>
        <GradientStop Color="#0F172A" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DarkThemeSliderBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#3B82F6" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DarkThemeToggleBackground" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#2D3748" Offset="0"/>
        <GradientStop Color="#2D3748" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
